<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ultimus.distantworlds">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.ultimus.distantworlds.about.AboutActivity"
            android:exported="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name_short"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="com.ultimus.distantworlds.provider.DistantWorldsArtProvider"
            android:authorities="${distantWorldsAuthority}"
            android:description="@string/source_description"
            android:exported="true"
            android:icon="@drawable/ic_dw_logo"
            android:label="@string/provider_name_dw"
            android:permission="com.google.android.apps.muzei.api.ACCESS_PROVIDER">
            <intent-filter>
                <action android:name="com.google.android.apps.muzei.api.MuzeiArtProvider" />
            </intent-filter>
            <meta-data
                android:name="settingsActivity"
                android:value="com.ultimus.distantworlds.about.AboutActivity" />
        </provider>

        <provider
            android:name=".provider.DistantWorldsArtDocumentsProvider"
            android:authorities="${distantWorldsAuthority}.documents"
            android:exported="true"
            android:grantUriPermissions="true"
            android:permission="android.permission.MANAGE_DOCUMENTS">
            <intent-filter>
                <action android:name="android.content.action.DOCUMENTS_PROVIDER" />
            </intent-filter>
        </provider>

        <provider
            android:name="com.ultimus.distantworlds.provider.DistantWorlds2ArtProvider"
            android:authorities="${distantWorlds2Authority}"
            android:description="@string/source_description"
            android:exported="true"
            android:icon="@drawable/ic_dw2logo"
            android:label="@string/provider_name_dw2"
            android:permission="com.google.android.apps.muzei.api.ACCESS_PROVIDER">
            <intent-filter>
                <action android:name="com.google.android.apps.muzei.api.MuzeiArtProvider" />
            </intent-filter>
            <meta-data
                android:name="settingsActivity"
                android:value="com.ultimus.distantworlds.about.AboutActivity" />
        </provider>

        <provider
            android:name=".provider.DistantWorlds2ArtDocumentsProvider"
            android:authorities="${distantWorlds2Authority}.documents"
            android:exported="true"
            android:grantUriPermissions="true"
            android:permission="android.permission.MANAGE_DOCUMENTS">
            <intent-filter>
                <action android:name="android.content.action.DOCUMENTS_PROVIDER" />
            </intent-filter>
        </provider>

        <meta-data
            android:name="google_analytics_adid_collection_enabled"
            android:value="false" />

    </application>
</manifest>
