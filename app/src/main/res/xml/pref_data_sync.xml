<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <CheckBoxPreference
        android:key="update_only_wifi"
        android:title="@string/pref_title_update_wifi"
        android:defaultValue="true"/>
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:key="update_frequency"
        android:title="@string/pref_title_update_frequency"
        android:entries="@array/pref_update_frequency_titles"
        android:entryValues="@array/pref_update_frequency_values"
        android:defaultValue="180"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"/>

    <Preference
        android:key="about"
        android:title="About DWE For Muzei"
        android:summary="Attributions and more"
        android:selectable="true"/>

</PreferenceScreen>
